From 606483decf1701d23a61fbd80f024984bc5e390a Mon Sep 17 00:00:00 2001
From: Mason Chang <mason-cw.chang@mediatek.com>
Date: Tue, 23 Sep 2025 17:03:40 +0800
Subject: [PATCH] dts: mediatek: add mt7988 multiple thermal zones

---
 arch/arm64/boot/dts/mediatek/mt7988a.dtsi | 94 ++++++++++++++++++++++-
 1 file changed, 93 insertions(+), 1 deletion(-)

diff --git a/arch/arm64/boot/dts/mediatek/mt7988a.dtsi b/arch/arm64/boot/dts/mediatek/mt7988a.dtsi
index d907769..62f99e3 100644
--- a/arch/arm64/boot/dts/mediatek/mt7988a.dtsi
+++ b/arch/arm64/boot/dts/mediatek/mt7988a.dtsi
@@ -6,6 +6,7 @@
 #include <dt-bindings/pinctrl/mt65xx.h>
 #include <dt-bindings/reset/mediatek,mt7988-resets.h>
 #include <dt-bindings/leds/common.h>
+#include <dt-bindings/thermal/mediatek,lvts-thermal.h>
 
 / {
 	compatible = "mediatek,mt7988a";
@@ -1300,7 +1301,7 @@ thermal-zones {
 		cpu_thermal: cpu-thermal {
 			polling-delay-passive = <1000>;
 			polling-delay = <1000>;
-			thermal-sensors = <&lvts 0>;
+			thermal-sensors = <&lvts MT7988_CPU_0>;
 			trips {
 				cpu_trip_crit: crit {
 					temperature = <125000>;
@@ -1309,6 +1310,97 @@ cpu_trip_crit: crit {
 				};
 			};
 		};
+
+		cpu_1_thermal: cpu-1-thermal {
+			polling-delay-passive = <1000>;
+			polling-delay = <1000>;
+			thermal-sensors = <&lvts MT7988_CPU_1>;
+			trips {
+				cpu_1_trip_crit: crit {
+					temperature = <125000>;
+					hysteresis = <2000>;
+					type = "critical";
+				};
+			};
+		};
+
+		eth2p5g_thermal: eth2p5g-thermal {
+			polling-delay-passive = <1000>;
+			polling-delay = <1000>;
+			thermal-sensors = <&lvts MT7988_ETH2P5G_0>;
+			trips {
+				eth2p5g_trip_crit: crit {
+					temperature = <125000>;
+					hysteresis = <2000>;
+					type = "critical";
+				};
+			};
+		};
+
+		eth2p5g_1_thermal: eth2p5g-1-thermal {
+			polling-delay-passive = <1000>;
+			polling-delay = <1000>;
+			thermal-sensors = <&lvts MT7988_ETH2P5G_1>;
+			trips {
+				eth2p5g_1_trip_crit: crit {
+					temperature = <125000>;
+					hysteresis = <2000>;
+					type = "critical";
+				};
+			};
+		};
+
+		tops_thermal: tops-thermal {
+			polling-delay-passive = <1000>;
+			polling-delay = <1000>;
+			thermal-sensors = <&lvts MT7988_TOPS_0>;
+			trips {
+				tops_trip_crit: crit {
+					temperature = <125000>;
+					hysteresis = <2000>;
+					type = "critical";
+				};
+			};
+		};
+
+		tops_1_thermal: tops-1-thermal {
+			polling-delay-passive = <1000>;
+			polling-delay = <1000>;
+			thermal-sensors = <&lvts MT7988_TOPS_1>;
+			trips {
+				tops_1_trip_crit: crit {
+					temperature = <125000>;
+					hysteresis = <2000>;
+					type = "critical";
+				};
+			};
+		};
+
+		ethwarp_thermal: ethwarp-thermal {
+			polling-delay-passive = <1000>;
+			polling-delay = <1000>;
+			thermal-sensors = <&lvts MT7988_ETHWARP_0>;
+			trips {
+				ethwarp_trip_crit: crit {
+					temperature = <125000>;
+					hysteresis = <2000>;
+					type = "critical";
+				};
+			};
+		};
+
+		ethwarp_1_thermal: ethwarp-1-thermal {
+			polling-delay-passive = <1000>;
+			polling-delay = <1000>;
+			thermal-sensors = <&lvts MT7988_ETHWARP_1>;
+			trips {
+				ethwarp_1_trip_crit: crit {
+					temperature = <125000>;
+					hysteresis = <2000>;
+					type = "critical";
+				};
+			};
+		};
 	};
 
 	timer {

From bf1c734e37de016865f3fb331cb4ed9f5818c1b0 Mon Sep 17 00:00:00 2001
From: Michael-CY Lee <michael-cy.lee@mediatek.com>
Date: Wed, 26 Mar 2025 14:11:37 +0800
Subject: [PATCH 166/254] hostapd: mtk: drop contiguous association frame
 before the previous one finishes sending

Signed-off-by: Michael-CY Lee <michael-cy.lee@mediatek.com>
---
 src/ap/ieee802_11.c | 17 ++++++++++++++++-
 src/ap/sta_info.h   |  1 +
 2 files changed, 17 insertions(+), 1 deletion(-)

diff --git a/src/ap/ieee802_11.c b/src/ap/ieee802_11.c
index 0541082ee..5ac03dcff 100644
--- a/src/ap/ieee802_11.c
+++ b/src/ap/ieee802_11.c
@@ -6087,6 +6087,13 @@ static void handle_assoc(struct hostapd_data *hapd,
 		}
 	}
 
+	if (sta->sending_assoc) {
+		hostapd_logger(hapd, sta->addr, HOSTAPD_MODULE_IEEE80211,
+			       HOSTAPD_LEVEL_DEBUG,
+			       "Drop subsequent assoc frame since previous one is under processing");
+		return;
+	}
+
 	if ((fc & WLAN_FC_RETRY) &&
 	    sta->last_seq_ctrl != WLAN_INVALID_MGMT_SEQ &&
 	    sta->last_seq_ctrl == seq_ctrl &&
@@ -6372,11 +6379,15 @@ static void handle_assoc(struct hostapd_data *hapd,
 	}
 #endif /* CONFIG_FILS */
 
-	if (resp >= 0)
+	if (resp >= 0) {
+		if (sta)
+			sta->sending_assoc = 1;
+
 		reply_res = send_assoc_resp(hapd,
 					    sta, sta ? sta->addr : mgmt->sa,
 					    resp, reassoc, pos, left, rssi,
 					    omit_rsnxe);
+	}
 	os_free(tmp);
 
 	/*
@@ -6388,6 +6399,7 @@ static void handle_assoc(struct hostapd_data *hapd,
 		     resp == WLAN_STATUS_SUCCESS) || sta->added_unassoc)) {
 		hostapd_drv_sta_remove(hapd, sta->addr);
 		sta->added_unassoc = 0;
+		sta->sending_assoc = 0;
 	}
 }
 
@@ -7267,6 +7279,7 @@ static void handle_assoc_cb(struct hostapd_data *hapd,
 			   "handle_assoc_cb(reassoc=%d) - too short payload (len=%lu)",
 			   reassoc, (unsigned long) len);
 		hostapd_drv_sta_remove(hapd, sta->addr);
+		sta->sending_assoc = 0;
 		return;
 	}
 
@@ -7379,6 +7392,7 @@ static void handle_assoc_cb(struct hostapd_data *hapd,
 		wpa_printf(MSG_DEBUG, "FILS: TK configuration failed");
 		ap_sta_disconnect(hapd, sta, sta->addr,
 				  WLAN_REASON_UNSPECIFIED);
+		sta->sending_assoc = 0;
 		return;
 	}
 #endif /* CONFIG_FILS */
@@ -7405,6 +7419,7 @@ static void handle_assoc_cb(struct hostapd_data *hapd,
 
 handle_ml:
 	hostapd_ml_handle_assoc_cb(hapd, sta, ok);
+	sta->sending_assoc = 0;
 }
 
 
diff --git a/src/ap/sta_info.h b/src/ap/sta_info.h
index 29de16c2e..aa88fcb9f 100644
--- a/src/ap/sta_info.h
+++ b/src/ap/sta_info.h
@@ -152,6 +152,7 @@ struct sta_info {
 	unsigned int external_dh_updated:1;
 	unsigned int post_csa_sa_query:1;
 	unsigned int mscs_assoc_included:1;
+	unsigned int sending_assoc:1;
 
 	u16 auth_alg;
 
